<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous" />
    <title>Document</title>
  </head>
  <body class="vh-" style="height: 90vh">
    <div
      class="container w-100 h-100 mx-auto mt-5 d-flex flex-column gap-2 justify-content-center align-items-center shadow-lg">
      <% if (typeof product !== "undefined") { %>
      <h1>Update Product</h1>
      <form
        action="/update/<%= product.id %>"
        method="POST"
        class="d-flex flex-column align-items-center justify-content-center mx-auto">
        <label class="form-label" for="name">name product: </label>
        <input
          class="form-control"
          type="text"
          style="padding: 3px 30px"
          name="name" />
        <br />
        <label for="price">price: </label>
        <input
          class="form-control"
          type="text"
          style="padding: 3px 30px"
          name="price" />
        <br />
        <label for="quantity">category: </label>
        <input
          class="form-control"
          type="text"
          style="padding: 3px 30px"
          name="category" />
        <br />
        <label for="description">description: </label>
        <input
          type="text"
          class="form-control"
          style="padding: 3px 30px"
          name="description" />
        <br />
        <input
          type="submit"
          class="btn btn-primary"
          style="padding: 3px 75px"
          value="Update Product" />
      </form>
      <% } else {%>
      <h1>Add Product</h1>
      <form
        action="/create"
        method="POST"
        class="d-flex flex-column align-items-center justify-content-center mx-auto">
        <label class="form-label" for="name">name product: </label>
        <input
          class="form-control"
          type="text"
          style="padding: 3px 30px"
          name="name" />
        <br />
        <label for="price">price: </label>
        <input
          class="form-control"
          type="text"
          style="padding: 3px 30px"
          name="price" />
        <br />
        <label for="quantity">category: </label>
        <input
          class="form-control"
          type="text"
          style="padding: 3px 30px"
          name="category" />
        <br />
        <label for="description">description: </label>
        <input
          type="text"
          class="form-control"
          style="padding: 3px 30px"
          name="description" />
        <br />
        <input
          type="submit"
          class="btn btn-primary"
          style="padding: 3px 75px"
          value="Add Product" />
      </form>
      <% } %>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"></script>
  </body>
</html>
